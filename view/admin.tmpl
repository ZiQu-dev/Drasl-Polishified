{{ template "layout" . }}

{{ define "title" }}Admin - {{ .App.Config.ApplicationName }}{{ end }}

{{ define "content" }}
  {{ template "header" . }}


  <h4>Oczekujące Zaproszenia</h4>

  <div style="text-align: right">
    <form
      style="all: unset !important"
      action="{{ .App.FrontEndURL }}/web/admin/new-invite"
      method="post"
    >
      <input hidden name="returnUrl" value="{{ .URL }}" />
      <input type="submit" value="+ Nowe Zaproszenie" />
    </form>
  </div>
  {{ if .Invites }}
    <table>
      <thead>
        <tr>
          <td style="width: 50%">Link</td>
          <td>Data Utworzenia</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        {{ range $invite := .Invites }}
          <tr>
            <td>
              <a href="{{ InviteURL $invite }}"
                >{{ $.App.FrontEndURL }}/web/registration?invite={{ $invite.Code }}</a
              >
            </td>
            <td>
              {{ $invite.CreatedAt.Format "Pon Jan _2 15:04:05 MST 2006" }}
            </td>
            <td>
              <form
                action="{{ $.App.FrontEndURL }}/web/admin/delete-invite"
                method="post"
              >
                <input hidden name="returnUrl" value="{{ $.URL }}" />
                <input
                  type="text"
                  name="inviteCode"
                  value="{{ $invite.Code }}"
                  hidden
                />
                <input type="submit" value="× Usuń" />
              </form>
            </td>
          </tr>
        {{ end }}
      </tbody>
    </table>
  {{ else }}
    Brak zaproszeń do wyświetlenia.
  {{ end }}


  <h4>Wszyscy Użytkownicy</h4>

  <div style="display: none">
    {{ range $user := .Users }}
      <form
        id="delete-{{ $user.Username }}"
        action="{{ $.App.FrontEndURL }}/web/delete-user"
        method="post"
        onsubmit="return confirm('Czy na pewno chcesz usunąć konto „{{ $user.Username }}”? Ta operacja jest nieodwracalna.');"
      >
        <input hidden name="returnUrl" value="{{ $.URL }}" />
        <input type="text" name="username" value="{{ $user.Username }}" />
      </form>
    {{ end }}
  </div>

  <form action="{{ .App.FrontEndURL }}/web/admin/update-users" method="post">
    <table>
      <thead>
        <tr>
          <td colspan="2">Profil</td>
          <td>Nazwa Gracza</td>
          <td>Administrator</td>
          <td>Zablokowane</td>
          <td>Usuń Konto</td>
        </tr>
      </thead>
      <tbody>
        {{ range $user := .Users }}
          <tr>
            <td style="width: 30px">
              <div
                class="list-profile-picture"
                style="background-image: url({{ UserSkinURL $user }});"
              ></div>
            </td>
            <td>
              <a
                href="{{ $.App.FrontEndURL }}/web/profile?user={{ $user.Username }}"
                >{{ $user.Username }}</a
              >
            </td>
            <td>{{ $user.PlayerName }}</td>
            <td>
              <input
                name="admin-{{ $user.Username }}"
                title="Administrator?"
                type="checkbox"
                {{ if
                  $user.IsAdmin
                }}
                  checked
                {{ end }}
                {{ if
                  IsDefaultAdmin
                  $user
                }}
                  disabled
                {{ end }}
              />
            </td>
            <td>
              <input
                name="locked-{{ $user.Username }}"
                title="Zablokowane?"
                type="checkbox"
                {{ if
                  $user.IsLocked
                }}
                  checked
                {{ end }}
              />
            </td>
            <td>
              <input
                type="submit"
                form="delete-{{ $user.Username }}"
                value="× Usuń"
              />
            </td>
          </tr>
        {{ end }}
      </tbody>
    </table>
    <p style="text-align: center">
      <input hidden name="returnUrl" value="{{ $.URL }}" />
      <input type="submit" value="Zapisz Zmiany" />
    </p>
  </form>

  {{ template "footer" . }}
{{ end }}